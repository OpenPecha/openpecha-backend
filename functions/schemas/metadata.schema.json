{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Metadata",
  "type": "object",
  "$defs": {
    "localized_string": {
      "type": "object",
      "patternProperties": {
        "^[a-z]{2}(-[A-Z]{2})?$": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "description": "Dictionary with language codes as keys and corresponding strings as values"
    }
  },
  "properties": {
    "author": {
      "$ref": "#/$defs/localized_string"
    },
    "date": {
      "type": "string",
      "format": "date"
    },
    "source": {
      "type": "string",
      "format": "uri"
    },
    "presentation": {
      "$ref": "#/$defs/localized_string",
      "nullable": true
    },
    "usage_title": {
      "$ref": "#/$defs/localized_string",
      "nullable": true
    },
    "title": {
      "$ref": "#/$defs/localized_string"
    },
    "long_title": {
      "$ref": "#/$defs/localized_string"
    },
    "alt_titles": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/localized_string"
      }
    },
    "type": {
      "type": "string",
      "enum": ["commentary", "root"]
    },
    "commentary_of": {
      "type": "string",
      "nullable": true
    },
    "version_of": {
      "type": "string",
      "nullable": true
    },
    "translation_of": {
      "type": "string",
      "nullable": true
    },
    "language": {
      "type": "string",
      "pattern": "^[a-z]{2}(-[A-Z]{2})?$"
    }
  },
  "required": [
    "author",
    "source",
    "title",
    "long_title",
    "alt_titles",
    "language"
  ],
  "dependentSchemas": {
    "type": {
      "oneOf": [
        {
          "properties": {
            "type": {
              "const": "commentary"
            },
            "commentary_of": {
              "type": "string"
            }
          },
          "required": ["commentary_of"]
        },
        {
          "properties": {
            "type": {
              "const": "root"
            }
          },
          "not": {
            "required": ["commentary_of"]
          }
        }
      ]
    }
  },
  "additionalProperties": false
}
