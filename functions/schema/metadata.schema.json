{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Metadata",
  "type": "object",
  "$defs": {
    "localized_string": {
      "type": "object",
      "patternProperties": {
        "^[a-z]{2}(-[A-Z]{2})?$": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "description": "Dictionary with language codes as keys and corresponding strings as values"
    },
    "pecha_id": {
      "type": "string",
      "pattern": "^I[A-F0-9]{8}$",
      "description": "ID pattern that starts with 'I' followed by 8 uppercase hex characters"
    }
  },
  "properties": {
    "author": {
      "$ref": "#/$defs/localized_string"
    },
    "date": {
      "type": "string",
      "format": "date"
    },
    "source": {
      "type": "string",
      "format": "uri"
    },
    "document_id": {
      "type": "string"
    },
    "presentation": {
      "$ref": "#/$defs/localized_string"
    },
    "usage_title": {
      "$ref": "#/$defs/localized_string"
    },
    "title": {
      "$ref": "#/$defs/localized_string"
    },
    "long_title": {
      "$ref": "#/$defs/localized_string"
    },
    "alt_titles": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/localized_string"
      }
    },
    "commentary_of": {
      "$ref": "#/$defs/pecha_id"
    },
    "version_of": {
      "$ref": "#/$defs/pecha_id"
    },
    "translation_of": {
      "$ref": "#/$defs/pecha_id"
    },
    "language": {
      "type": "string",
      "pattern": "^[a-z]{2}(-[A-Z]{2})?$"
    }
  },
  "required": [
    "author",
    "document_id",
    "source",
    "title",
    "long_title",
    "language"
  ],
  "oneOf": [
    {
      "required": ["commentary_of"],
      "not": {
        "anyOf": [
          { "required": ["version_of"] },
          { "required": ["translation_of"] }
        ]
      }
    },
    {
      "required": ["version_of"],
      "not": {
        "anyOf": [
          { "required": ["commentary_of"] },
          { "required": ["translation_of"] }
        ]
      }
    },
    {
      "required": ["translation_of"],
      "not": {
        "anyOf": [
          { "required": ["commentary_of"] },
          { "required": ["version_of"] }
        ]
      }
    },
    {
      "not": {
        "anyOf": [
          { "required": ["commentary_of"] },
          { "required": ["version_of"] },
          { "required": ["translation_of"] }
        ]
      }
    }
  ],
  "additionalProperties": false
}
